{
    "name": "iverberk/semver-updater",
    "description": "Automatically increase version numbers for automated builds",
    "authors": [
        {
            "name": "Ivo Verberk",
            "email": "ivo.verberk@gmail.com"
        },
        {
            "name": "Ferry de Groot",
            "email": "watkannogwel@gmail.com"
        }
    ],
	"repositories": {
		"semver": {
			"type": "package",
			"package": {
				"name": "naneau/semver",
				"version": "0.9.0",
				"source": {
					"url": "https://github.com/naneau/semver",
					"type": "git",
					"reference": "54ee69549f4f977c673d582464ecb4960ce6f560"
				}
			}
		}
	},
    "bin": [
        "bin/semver"
    ],
    "require": {
        "php": ">=5.4.0",
        "naneau/semver": "0.9.0",
        "symfony/console": ">=2.5"
    },
    "autoload": {
        "psr-0": {
            "Iverberk\\Semver": "src/"
        }
    },
    "minimum-stability": "dev"
}
